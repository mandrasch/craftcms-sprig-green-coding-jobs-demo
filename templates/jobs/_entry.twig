{% extends '_layout' %}

{% block content %}

	{# TODO: add link to the index url if there is no previous history / referrer #}
	<a href="javascript:history.back()">&laquo; Back to the jobs</a>

	<div class="page-job-details">

		<h1>{{entry.title}}</h1>

		<p class="subline">{{entry.subline ??? ''}}</p>

		{% set image = entry.image.one() ??? null %}
		{% if image %}
			{# TODO: Is the correct way for autogenerated transforms? #}
			{% set transforms = craft.imagerx.transformImage(image, 'heroImage') %}
			{# {{dump(transforms)}} #}
			{# https://imager-x.spacecat.ninja/templating.html#twig-filters #}
		<img src=" {{ craft.imagerx.placeholder({ width: 16, height: 9 } ) }}" sizes=" auto" srcset=" {{ transforms | srcset }} "> {% endif %}

		{{entry.description|raw()}}

	{% endblock %}
